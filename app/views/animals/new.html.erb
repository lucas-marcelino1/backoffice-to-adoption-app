<% if @animal.errors.full_messages.any? %>
    
    <ul>
    <% @animal.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
    <% end %>
    </ul>

<% end %>


<%= form_with model: @animal do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :sex %>
<%= f.text_field :sex %>

<%= f.label :age %>
<%= f.text_field :age %>

<%= f.label :city %>
<%= f.text_field :city %>

<%= f.submit 'Cadastrar animal' %>

<% end %>