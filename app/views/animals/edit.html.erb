<% if @animal.errors.full_messages.any? %>
    
    <ul>
    <% @animal.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
    <% end %>
    </ul>

<% end %>


<%= form_with model: @animal do |f| %>

    <%= f.label :name, "Nome" %>
    <%= f.text_field :name %>

    <%= f.label :sex, "Sexo" %>
    <%= f.text_field :sex %>

    <%= f.label :age, "Idade" %>
    <%= f.text_field :age %>

    <%= f.label :city, "Cidade" %>
    <%= f.text_field :city %>

    <%= f.label :pet_care_id, "Cuidador" %>
    <%= f.collection_select :pet_care_id, PetCare.all, :id, :name %>

    <%= f.submit 'Editar adoção' %>

<% end %>